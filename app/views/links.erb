
  <div>
    <h1> Links are: </h1><br>
  </div>
  <div>
    <% @links.each_with_index do |link, index|  %>
    <p> <b><%= index + 1 %>:</b>  <a href="<%= link[:url] %>"><%= link[:title] %></a></p>
    <% end %>
  </div>
  <div>
    <form action='/links/new' method='get'>
      <button type='submit'>NEW LINK</button>
    </form><br>
  </div>
  <div>
    <h2> Filter by Tag: </h2>
  </div>
  <div>
    <p>
    <% @tags.each do |tag|  %>
    - <a href="/tag/<%= tag[:tag_name] %>"><%= tag[:tag_name].capitalize %></a>
    <% end %>
    </p>
  </div>
